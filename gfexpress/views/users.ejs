<div class="title">
<%- include layouts/header.ejs %>
  <div class="page-data">
   <div class="data-btn">
           <button onClick="addUser();">+ Add</button>
   </div>
   <div class="data-table">
    <table border="1" cellpadding="7" cellspacing="7">
    <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Action</th>
    </tr>
    <% if(users.length){
      for(var i=0; i<users.length; i++){ %>
      <tr>
        <td style="display:none;"><%= users[i].id %></td>
        <td><%= users[i].firstname %></td>
        <td><%= users[i].lastname %></td>
        <td><%= users[i].email %></td>

        <td>
              <a class="a-inside edit" href="../customers/edit/<%=users[i].id%>">Edit</a>
              <a class="a-inside delete" href="../customers/delete/<%=users[i].id%>">Delete</a>
        </td>
      </tr>
    <% }
    }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
    <% } %>

  </table>

</div>
</div>
<br/>

</div>
<%- include layouts/footer.ejs %>
